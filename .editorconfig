# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space

[*.js]
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

[{*.txt,*.json,*.xml}]
insert_final_newline = false
indent_size = 2

[*.yml]
insert_final_newline = true
indent_size = 2